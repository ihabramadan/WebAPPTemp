<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <listener>
        <listener-class>GPStreet.GPStreetCL</listener-class>
    </listener>
    <filter>
        <filter-name>
            ShiroFilter
        </filter-name>
        <filter-class>
            org.apache.shiro.web.servlet.IniShiroFilter
        </filter-class>
        <init-param>
            <param-name>configPath</param-name>
            <param-value>E:\\GPStreet\\GPStreet\\web\\WEB-INF\\Shiro.ini</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>ShiroFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <context-param>
        <param-name>javax.faces.WEBAPP_RESOURCES_DIRECTORY</param-name>
        <param-value>/WEB-INF/resources/assets</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Production</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>GPStreetCL</servlet-name>
        <servlet-class>GPStreet.GPStreetCL</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetAllGroups</servlet-name>
        <servlet-class>GPStreet.Servlets.GetAllGroups</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetAllgroups</servlet-name>
        <servlet-class>GPStreet.Servlets.GetAllgroups</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddGroup</servlet-name>
        <servlet-class>GPStreet.Servlets.AddGroup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteGroup</servlet-name>
        <servlet-class>GPStreet.Servlets.DeleteGroup</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GPStreetCL</servlet-name>
        <url-pattern>/GPStreetCL</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetAllGroups</servlet-name>
        <url-pattern>/GetAllGroups</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetAllgroups</servlet-name>
        <url-pattern>/GetAllgroups</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddGroup</servlet-name>
        <url-pattern>/AddGroup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteGroup</servlet-name>
        <url-pattern>/DeleteGroup</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>common/login.xhtml</welcome-file>
    </welcome-file-list>
</web-app>
